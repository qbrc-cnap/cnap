{
    "master_html_template": "html_elements/form_template.html",
    "master_javascript_template": "js/form_handler.js",
    "master_css_template": "css/analysis_form.css",
    "gui_elements": {
        "file_chooser": {
            "html_source": "html_elements/file_chooser.html",
            "js_source": "js/file_chooser.js",
            "submit_handler": "js/file_chooser_submit.js",
            "parameters": [
                {
                    "name": "label",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "choose_multiple",
                    "type": "bool",
                    "required": false, 
                    "default": false
                },
                {
                    "name": "regex_filter",
                    "type": "string",
                    "required": false, 
                    "default": ".*"
                }
            ]
        },
        "text": {
            "html_source": "html_elements/text_input.html",
            "js_source": "js/text_input.js",
            "submit_handler": "js/text_input_submit.js",
            "parameters": [
                {
                    "name": "label",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "placeholder",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "max_length",
                    "type": "int",
                    "required": false,
                    "default": 1000
                },
                {
                    "name": "min_length",
                    "type": "int",
                    "required": false,
                    "default": 1
                }
            ]

        },
        "select": {
            "html_source": "html_elements/select_input.html",
            "js_source": "js/select_input.js",
            "submit_handler": "js/select_input_submit.js",
            "parameters": [
                {
                    "name": "choices",
                    "type": "list of objects",
                    "required": true
                },
                {
                    "name": "label",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "choose_multiple",
                    "type": "bool",
                    "required": false,                
                    "default": false
                }
            ]
        },
        "radio": {
            "html_source": "html_elements/radio_input.html",
            "js_source": "js/radio_input.js",
            "submit_handler": "js/radio_input_submit.js",
            "parameters": [
                {
                    "name": "choices",
                    "type": "mapping",
                    "required": true
                },
                {
                    "name": "label",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "default": ""
                }
            ]
        },
        "boolean_checkbox": {
            "html_source": "html_elements/boolean_checkbox.html",
            "js_source": "js/boolean_checkbox.js",
            "submit_handler": "js/boolean_checkbox_submit.js",
            "parameters": [
                {
                    "name": "default_state",
                    "type": "bool",
                    "default": true,
                    "required": false
                },
                {
                    "name": "label",
                    "type": "string",
                    "required": false,
                    "default": ""
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "default": ""
                }
            ]
        },
        "hidden": {
            "html_source": "html_elements/hidden_input.html",
            "js_source": "js/hidden_input.js",
            "submit_handler": "js/hidden_input_submit.js",
            "parameters": [
                {
                    "name": "value",
                    "required": true
                }
            ]
        },
        "dynamic_hidden": {
            "html_source": "html_elements/hidden_input.html",
            "js_source": "js/hidden_input.js",
            "submit_handler": "js/hidden_input_submit.js",
            "parameters": [
                {
                    "name": "context_args",
                    "type": "mapping",
                    "required": true
                },
                {
                    "name": "handler",
                    "type": "string",
                    "required": true
                }
            ]
        }
    }
}
